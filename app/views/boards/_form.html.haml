
%ul
  - board.errors.full_messages.each do |message|
    %li= message
= form_with(model: board , local: true) do |f|
  %div
    = f.label :title ,'Name'
  %div
    = f.text_field :title , class: 'text'
  %div
    = f.label :content ,'Description'
  %div
    = f.text_area :content, class: 'long-text'
  = f.submit 'Submit' , class: 'submit'
