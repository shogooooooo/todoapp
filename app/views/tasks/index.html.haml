.container
  %h2= @board.title
  - @tasks.each do |task|
    = link_to board_task_path(task) do
      .task-card
        .task-card_title
          = task.title  
        .task-card_content
          = task.content
        .task-card_buttom
          .task-card_avatar
          .comment-count
= link_to new_board_task_path do
  .float_btn
    %p +Add new card
  
