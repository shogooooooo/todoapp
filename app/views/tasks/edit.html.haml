.container
  %h2 Edit task
  = form_with(model: @task ,url: board_task_path(@board,@task), method: 'put', local: true) do |f|
    %div 
      = f.label :eyecatch, 'Eyecatch'
    %div 
      = f.file_field :eyecatch, class: 'eyecatch'
    %div
      = f.label :title ,'Name'
    %div
      = f.text_field :title , class: 'text'
    %div
      = f.label :content ,'Description'
    %div
      = f.text_area :content, class: 'long-text'
    = f.submit 'Submit' , class: 'submit'